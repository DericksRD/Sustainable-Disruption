    <!-- End of header -->
    
    <header id="hero" class="parallax">
        <a href="#">
            <img src="../public/images/SD LLC.png" alt="SD LLC Logo" style="width: 250px; height: 100px;">
        </a>
        <div id="title-wrapper">
            <h1>Embracing sustainability at its best</h1>
